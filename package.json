{
  "name": "@identity-service/ui",
  "version": "0.1.0",
  "private": true,
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "ts-node config/esbuild.config.ts",
    "test": "cross-env CI=true react-scripts test --collectCoverage",
    "storybook": "cross-env DISABLE_ESLINT_PLUGIN=true start-storybook -p 6007 -s public",
    "build-storybook": "build-storybook -s public",
    "coverage": "open-cli coverage/lcov-report/index.html",
    "updates": "ncu",
    "clean": "rm -rf node_modules",
    "e2e": "pnpm e2e:prepare && pnpm exec playwright test -c src/playwright.config.ts",
    "e2e:debug": "cross-env PWDEBUG=console pnpm dlx playwright test -c src/playwright.config.ts",
    "e2e:prepare": "npx playwright install --with-deps",
    "clear:screenshots": "rm -rf **/*.spec.ts-snapshots",
    "lint": "pnpm format && pnpm lint:styles && pnpm lint:ts",
    "lint:ts": "eslint --cache --fix --ext .ts,.tsx .",
    "lint:styles": "stylelint \"**/*.scss\" --fix",
    "format": "prettier --write \".\"",
    "prepare": "husky install && ts-patch install -s"
  },
  "dependencies": {
    "css-has-pseudo": "^5.0.2",
    "open-props": "^1.5.5",
    "react-transition-group": "^4.4.5",
    "react-use": "^17.4.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.3",
    "@storybook/addon-a11y": "6.5.16",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-docs": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/builder-webpack5": "6.5.16",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/node-logger": "6.5.16",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@types/react-transition-group": "^4.4.5",
    "@types/resemblejs": "^4.1.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "aria-live-storybook-addon": "^0.0.6",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.18",
    "esbuild-node-externals": "^1.7.0",
    "esbuild-plugin-svgr": "^1.1.0",
    "esbuild-sass-plugin": "^2.9.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^13.2.1",
    "open-cli": "^7.2.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-modules": "^6.0.0",
    "prettier": "^2.8.7",
    "raw-loader": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "resemblejs": "^4.1.0",
    "sass": "^1.62.0",
    "storybook-addon-turbo-build": "^2.0.0",
    "storybook-design-token": "^2.9.0",
    "stylelint": "^15.6.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "stylelint-no-unsupported-browser-features": "^6.1.0",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 3 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.type.{ts,tsx}",
      "!**/*.spec.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "index",
      "playwright.config.ts",
      "react-app-env.d.ts",
      "utils/testHelpers"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "pnpm": {
    "overrides": {
      "canvas": "2.11.0"
    }
  }
}
